<div>
  <label>Select Student</label>
  <br />
  <%= select_tag :students,options_for_select(@students.map{|s| [s.first_name+" "+ s.last_name, s.id]}), {onchange: 'show_user_comment(event)', class: 'student-select', include_blank: "Select Student"} %>
</div>
<script>
  function show_user_comment(event){
    student_id = event.target.value;
    if(student_id == '' || student_id == undefined){
      window.location = `/comments`
    }else{
      window.location = `/comments/${student_id}/show-comments`
    }
  }
</script>